<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView 
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"
        >      
        <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/corners_bg_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"> 

        <!-- Version -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="2dp"
            android:background="@drawable/corners_bg_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/corners_bg_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- ////// -->

            <TextView android:id="@+id/dta_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/empty"/>
                
        </LinearLayout>
        </LinearLayout>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#FF00FF"
            android:text="@string/test_instrument_list"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="2dp"
            android:background="@drawable/corners_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/corners_bg_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- ////// -->

            <Spinner
                android:id="@+id/test_instrument_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
                
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/empty"/>
                
	        <Button android:id="@+id/set_config"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/set_config"
	                android:textSize="20dip"/>                
        </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#FF00FF"
            android:text="@string/result"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="2dp"
            android:background="@drawable/corners_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/corners_bg_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
         <Switch android:id="@+id/dta_mode_switch" android:layout_width="wrap_content" android:layout_height="wrap_content"
						 android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:text="@string/empty"/>
          <TextView android:id="@+id/dta_must_reboot_text" android:layout_width="wrap_content" android:layout_height="wrap_content"
						 android:textSize="20dp" android:textColor="#FF0000" android:text="@string/enable_dta_notify_message"/>
        </LinearLayout>
        </LinearLayout>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp"
				 android:textColor="#FF00FF" android:text="@string/result"/>
			<LinearLayout android:orientation="vertical" android:padding="2dp" android:background="@drawable/corners_bg"
				 android:layout_width="match_parent" android:layout_height="wrap_content">
				<LinearLayout android:orientation="vertical" android:padding="10dp" android:background="@drawable/corners_bg_2"
					 android:layout_width="match_parent" android:layout_height="match_parent">
            <!-- ////// -->
            <TextView
                android:id="@+id/result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/empty"/>            
        </LinearLayout>
        </LinearLayout>
                
    </LinearLayout>    
    </ScrollView>    
</LinearLayout>

