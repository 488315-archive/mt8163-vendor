<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
    
    <ImageView android:id="@+id/in_pocket_sketch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:src="@drawable/ic_in_pocket_sketch" />
    <View
        android:layout_width="match_parent"
        style="@style/sketch_horizontal_divider" />
    <TextView android:id="@+id/in_pocket_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/in_pocket_description"
        />

</LinearLayout>
