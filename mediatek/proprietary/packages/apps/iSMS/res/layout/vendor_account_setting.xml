<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:orientation="vertical" >

    <com.hesine.nmsg.ui.HeaderView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.hesine.nmsg.ui.HeaderView>

    <LinearLayout
        android:id="@+id/setting_account_layout"
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.hesine.nmsg.ui.CircularImage
            android:id="@+id/setting_account_avatar"
            android:layout_width="@dimen/setting_avatar"
            android:layout_height="@dimen/setting_avatar"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:background="@drawable/vendor_avatar_bg"
            android:padding="0.3dip"
            android:src="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/setting_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:layout_marginRight="@dimen/setting_padding_left_right"
            android:gravity="left|center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/setting_color"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingTop="14dp" >

        <TextView
            android:id="@+id/setting_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:text="@string/setting_introduce"
            android:textColor="@color/setting_color"
            android:textSize="@dimen/setting_text_size" />

        <TextView
            android:id="@+id/setting_introduce_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/setting_introduce"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/setting_padding_left_right"
            android:layout_toRightOf="@+id/setting_introduce"
            android:maxLines="10"
            android:textColor="#999999"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:layout_marginTop="26dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_list_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/setting_switch_text"
            android:textColor="@color/setting_color"
            android:textSize="@dimen/setting_text_size" />

        <ImageView
            android:id="@+id/setting_account_switch"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="@dimen/setting_padding_left_right"
            android:scaleType="fitXY" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_list_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_clear_history"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:gravity="left|center_vertical"
            android:text="@string/setting_clear_history"
            android:textColor="@color/setting_color"
            android:textSize="@dimen/setting_text_size" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_list_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/person_setting"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:gravity="left|center_vertical"
            android:text="@string/personal_setting"
            android:textColor="@color/setting_color"
            android:textSize="@dimen/setting_text_size" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

</LinearLayout>