<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:orientation="vertical" >

    <com.hesine.nmsg.ui.HeaderView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.hesine.nmsg.ui.HeaderView>

    <LinearLayout
        android:id="@+id/account_layout"
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:text="@string/account_icon_text"
            android:textColor="@color/setting_color"
            android:textSize="@dimen/setting_text_size" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.hesine.nmsg.ui.CircularImage
            android:id="@+id/account_avatar"
            android:layout_width="@dimen/setting_avatar"
            android:layout_height="@dimen/setting_avatar"
            android:layout_marginRight="@dimen/setting_padding_left_right"
            android:src="@drawable/avadar2" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="26dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/setting_list_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/account_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:text="@string/account_name_text"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_size" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/account_name_user1"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:textColorHint="@color/light_grey"
            android:layout_marginRight="@dimen/setting_padding_left_right"
            android:textSize="@dimen/setting_text_size" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_list_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/account_sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_padding_left_right"
            android:text="@string/account_sex"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_size" />

        <TextView
            android:id="@+id/account_sex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/account_sex_male"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_size"
            android:gravity="right"
            android:layout_marginRight="@dimen/setting_padding_left_right" />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_list_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/account_tel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="@string/account_tel_text"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_size" />

        <TextView
            android:id="@+id/account_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:hint="@string/account_name_tel_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/light_grey"
            android:textSize="@dimen/setting_text_size"
            android:gravity="right"
            android:layout_marginRight="@dimen/setting_padding_left_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey" />
   <LinearLayout
       android:id="@+id/nmsg_setting_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_list_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:visibility="gone">

        <TextView
            android:id="@+id/nmsg_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="@string/nmsg_setting"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_size" />      
    </LinearLayout>

    <View
        android:id="@+id/nmsg_setting_line_view"
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/light_grey"
        android:visibility="gone"
         />
</LinearLayout>