<?xml version="1.0" encoding="utf-8"?>
<com.mediatek.rcs.pam.ui.accounthistory.AccountHistoryMsgItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <!-- Ip message for text -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listitem_background_recv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="45dp"
        android:paddingBottom="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >
    <include
        android:id="@+id/tv_message_item"
        layout="@layout/message_item_view"/>

    </LinearLayout>
</com.mediatek.rcs.pam.ui.accounthistory.AccountHistoryMsgItemView>